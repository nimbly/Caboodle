{
    "name": "nimbly/caboodle",
    "description": "Configuration and settings manager with autoloading from disk or AWS Secrets Manager.",
    "type":"library",
	"require": {
		"php": "^8.0",
        "psr/container": "^1.0|^2.0"
    },
	"license": "MIT",
    "authors": [
        {
            "name": "Brent Scheffler",
            "email": "brent@brentscheffler.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.0",
        "php-coveralls/php-coveralls": "^2.1",
        "aws/aws-sdk-php": "^3.110",
        "symfony/var-dumper": "^4.3"
    },
    "suggest": {
        "aws/aws-sdk-php": "For using AwsLoader to load configurations from AWS Secrets Manager."
    },
    "autoload": {
        "psr-4": {
            "Nimbly\\Caboodle\\": "src/"
        }
    }
}
